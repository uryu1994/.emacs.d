;; package
(package-initialize)
(setq package-archives
      '(("gnu" . "http://elpa.gnu.org/packages/")
        ("melpa" . "http://melpa.org/packages/")
        ("org" . "http://orgmode.org/elpa/")))

;; 行番号設定 
(require 'linum)
(global-linum-mode)

;; バックアップファイル作成禁止
(setq make-backup-files nil)

;; 自動セーブ禁止
(setq auto-save-default nil)
